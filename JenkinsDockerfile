pipeline{
agent any
stages{
stage("copy artiface"){
steps{
copyArtifacts filter: 'target/demoart.war', fingerprintArtifacts: true, projectName: 'Warfile', selector: lastSuccessful()
}
}

stage("docker build"){
steps{
sh ''' sudo docker build -t helloworldapp . '''
}
}

stage("docker tag image"){
steps{
sh ''' docker tag helloworldapp sheelademo/sheeladocker/helloworldapp:latest '''
}
}

stage("docker push"){
steps{
script{
withDockerRegistry(credentialsId: 'sheelademo', url: 'https://registry.hub.docker.com') {
   
   sh '''  docker push sheelademo/sheeladocker/helloworldapp:latest '''  
}
}
}
}

}
}

