pipeline{
agent any
stages{
stage("copy artiface"){
steps{
copyArtifacts filter: 'target/demoart.war', fingerprintArtifacts: true, projectName: 'Warfile', selector: lastSuccessful()
}
}

stage("docker build"){
steps{
sh ''' sudo docker build -t demoart . '''
}
}

stage("docker push"){
steps{
withDockerRegistry(credentialsId: 'sheelademo', url: 'https://registry.hub.docker.com') {
   sh ''' docker tag demoart sheelademo/demoart '''
   sh ''' docker push sheelademo/demoart '''  
}
}
}

}
}

